<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/stylenew.css">
  <title>Add New Flight</title>
</head>
<body>
  <h1>Add New Flight</h1>

  <!-- Form for adding a new flight -->
  <form action="/flights" method="POST">
    <!-- Airline -->
    <label for="airline">Airline:</label>
    <select id="airline" name="airline" required>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>

    <!-- Airport -->
    <label for="airport">Airport:</label>
    <select id="airport" name="airport" required>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>

    <!-- Flight Number -->
    <label for="flightNo">Flight Number:</label>
    <input type="number" id="flightNo" name="flightNo" min="10" max="9999" required>

    <!-- Departure Date/Time -->
    <label for="departs">Departure Date/Time:</label>
    <input type="datetime-local" id="departs" name="departs" required>

    <!-- Submit Button -->
    <button type="submit">Submit</button>
  </form>
</body>
</html>
